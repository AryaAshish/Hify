<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryy</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkk</item>
        <item name="colorAccent">@color/colorAccentt</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="GeometricWeatherTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="GeometricWeatherTheme.Search" parent="GeometricWeatherTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowEnterTransition">@transition/search_activity_enter</item>
        <item name="android:windowReturnTransition">@transition/search_activity_return</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/search_activity_shared_enter
        </item>
        <item name="android:windowSharedElementReturnTransition">
            @transition/search_activity_shared_return
        </item>
    </style>

</resources>