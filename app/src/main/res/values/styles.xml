<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryy</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkk</item>
        <item name="colorAccent">@color/colorAccentt</item>
        <item name="android:windowBackground">@color/colorPrimaryy</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- app theme -->
    <style name="HifyWeatherTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="HifyWeatherTheme.AppbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="HifyWeatherTheme.AppbarPopupTheme" parent="ThemeOverlay.AppCompat.Light" />

    <!-- card. -->
    <style name="material_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">@dimen/little_margin</item>
        <item name="android:layout_marginRight">@dimen/little_margin</item>
        <item name="android:layout_marginBottom">@dimen/little_margin</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@animator/touch_raise</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="widget_background_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/widget_card</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Popup window. -->
    <style name="PopupWindowAnimation.Top.Left" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show_top_left</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="PopupWindowAnimation.Top.Right" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show_top_right</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="PopupWindowAnimation.Bottom.Left" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show_bottom_left</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="PopupWindowAnimation.Bottom.Right" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show_bottom_right</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <!-- view. -->
    <style name="week_weather_week_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- image. -->
    <style name="material_icon">
        <item name="android:layout_width">@dimen/material_icon_size</item>
        <item name="android:layout_height">@dimen/material_icon_size</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:layout_marginLeft">@dimen/normal_margin</item>
        <item name="android:layout_marginRight">@dimen/normal_margin</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin</item>
    </style>

    <style name="widget_week_icon">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/weather_cloudy</item>
    </style>

    <!-- text. -->
    <style name="large_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large_title_text_size</item>
        <item name="android:textColor">@color/colorRoot</item>
    </style>

    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>

    <style name="content_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">@color/colorTextContent</item>
    </style>

    <style name="subtitle_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">@color/colorTextSubtitle</item>
    </style>

    <!-- spinner -->
    <style name="spinner_item" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">@color/colorTextContent</item>
        <item name="android:background">@color/colorRoot</item>
    </style>

    <!-- switch -->
    <style name="my_switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">?attr/colorAccent</item>
    </style>

    <!-- button -->
    <style name="material_button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="activity_create_widget_done_button" parent="material_button">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:text">@string/done</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="material_image_button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">@dimen/little_margin</item>
        <item name="android:layout_margin">@dimen/little_margin</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- clock -->
    <style name="widget_text_clock">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:format24Hour">HH:mm</item>
        <item name="android:format12Hour">h:mm</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/widget_current_weather_icon_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:shadowColor">@color/colorTextDark2nd</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="widget_text_clock_aa">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:format24Hour" />
        <item name="android:format12Hour">aa</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/widget_aa_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:shadowColor">@color/colorTextDark2nd</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <!-- Reminder Style -->
    <style name="StartTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowTitleSize">?attr/actionBarSize</item>
        <item name="android:windowTitleStyle">@style/CustomWindowTitle</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:windowNoTitle">false</item>

    </style>

    <style name="ReminderAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:dividerHeight">@dimen/line_separator_height</item>
        <item name="android:dialogTheme">@style/Dialog</item>

        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:dialogTheme">@style/Dialog</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>

    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeTransparent" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>

    </style>

    <style name="Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="actionModeStyle">@style/ToolbarActionMode</item>
    </style>

    <style name="OverFlow" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:paddingLeft">7dp</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ToolbarActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/primary</item>
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="CustomWindowTitle">
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/CustomWindowTitleText</item>
    </style>

    <style name="CustomWindowTitleText">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="TitleEditText">
        <item name="colorControlNormal">#d2d2d2</item>
    </style>

    <style name="OurStreets" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <item name="rippleColor">@color/ripple</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="colorPrimaryDark">@color/blue_grey_900</item>
        <item name="colorPrimary">@color/blue_grey_800</item>
        <item name="android:colorBackground">@color/backgroundd</item>
        <item name="android:colorForeground">@color/foreground</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="OurStreets.Gallery">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:background">@color/blue_grey_600</item>
    </style>

    <style name="OurStreets.Gallery.Grid">
        <item name="layoutManager">LinearLayoutManager</item>
    </style>

    <style name="OurStreets.Title" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="OurStreets.Detail" />

    <style name="OurStreets.Detail.Fab">
        <item name="backgroundTint">@color/theme_accent</item>
        <item name="fabSize">normal</item>
        <item name="layout_anchor">@id/description_layout</item>
        <item name="layout_anchorGravity">top|end</item>
        <item name="android:layout_marginEnd">@dimen/grid_double</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>
