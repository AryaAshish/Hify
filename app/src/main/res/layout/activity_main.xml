<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryy"
    tools:context=".ui.activities.MainActivity">

    <RelativeLayout
           android:id="@+id/appbar"
           android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
               android:id="@+id/logo"
               android:layout_width="40dp"
               android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/logo"
            android:transitionName="@string/transition_name" />

           <TextView
               android:id="@+id/title"
               fontPath="fonts/bold.ttf"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginLeft="10dp"
               android:layout_marginStart="10dp"
               android:layout_toRightOf="@+id/logo"
               android:gravity="center_vertical"
               android:text="@string/app_name"
               android:textColor="#212121"
               android:textSize="22sp"
               tools:ignore="MissingPrefix" />

        <com.rd.PageIndicatorView
            android:id="@+id/pageIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            app:piv_animationType="swap"
            app:piv_dynamicCount="true"
            app:piv_interactiveAnimation="true"
            app:piv_padding="12dp"
            app:piv_radius="5dp"
            app:piv_selectedColor="@color/textTabBright"
            app:piv_unselectedColor="@color/textTabLight"
            app:piv_viewPager="@+id/mainpager" />

       </RelativeLayout>

    <LinearLayout
           android:id="@+id/tabs_layout"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_alignParentBottom="true"
        android:background="#80000000"
        android:orientation="horizontal"
        android:visibility="gone"
           >

           <ImageView
               android:id="@+id/profileLabel"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="#20000000"
               android:padding="10dp"
               android:src="@drawable/ic_account_circle_black_24dp"
               />

           <ImageView
               android:id="@+id/usersLabel"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               />
           <ImageView
               android:id="@+id/notificationLabel"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               />

       </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/mainpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:overScrollMode="never" />





</RelativeLayout>
