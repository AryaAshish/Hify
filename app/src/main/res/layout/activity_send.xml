<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.activities.SendActivity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/image"
          android:layout_width="120dp"
          android:layout_height="120dp"
          android:layout_below="@+id/progressBar"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="30dp"
          android:onClick="PreviewProfileImage"
          android:src="@mipmap/profile_black"
          app:civ_border_color="@color/colorPrimary"
          app:civ_border_width="1dp" />

      <TextView
          android:id="@+id/user_name1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/image"
          android:layout_centerHorizontal="true"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginTop="30dp"
          android:fontFamily="@font/nunito_semibold"
          android:gravity="center_horizontal"
          android:text="Send Message to :"
          android:textSize="18sp" />

      <TextView
          android:id="@+id/user_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/user_name1"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="30dp"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:fontFamily="@font/nunito_semibold"
          android:gravity="center_horizontal"
          android:textColor="#2591FC"
          android:textSize="18sp" />

     <FrameLayout
         android:id="@+id/imageLayout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/user_name"
         android:layout_centerHorizontal="true">

         <ImageView
             android:id="@+id/imagePreview"
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:contentDescription="attachment"
             android:onClick="PreviewImage"
             android:scaleType="centerCrop" />

         <Button
             style="@style/Widget.AppCompat.Button.Borderless"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="bottom"
             android:background="#60000000"
             android:fontFamily="@font/nunito_semibold"
             android:onClick="RemoveImage"
             android:text="Remove Image"
             android:textAllCaps="false"
             android:textColor="#ffffff" />

     </FrameLayout>

      <LinearLayout
          android:id="@+id/options"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/imageLayout"
          android:layout_marginBottom="10dp"
          android:layout_marginTop="20dp"
          android:gravity="center_horizontal"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/getLocation"
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:layout_marginEnd="5dp"
              android:layout_marginRight="5dp"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?attr/selectableItemBackground"
              android:onClick="OnLocationClick"
              android:padding="16dp"
              android:src="@mipmap/location" />

          <ImageView
              android:id="@+id/getImage"
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:layout_marginLeft="5dp"
              android:layout_marginStart="5dp"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?attr/selectableItemBackground"
              android:onClick="SelectImage"
              android:padding="15dp"
              android:src="@mipmap/image" />

      </LinearLayout>

      <LinearLayout
          android:id="@+id/sendLayout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/options"
          android:layout_marginBottom="30dp"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginTop="10dp"
          android:orientation="vertical">

          <EditText
              android:id="@+id/message"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/input_backgtound_grey"
              android:hint="Enter Message"
              android:inputType="textCapSentences|textMultiLine"
              android:padding="20dp" />

          <Button
              android:id="@+id/send"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:background="@drawable/button_primary_backgtound"
              android:fontFamily="@font/nunito_semibold"
              android:padding="10dp"
              android:text="Send"
              android:textAllCaps="false"
              android:textColor="#ffffff"
              android:textSize="18sp"
              />

      </LinearLayout>

  </RelativeLayout>

</ScrollView>
