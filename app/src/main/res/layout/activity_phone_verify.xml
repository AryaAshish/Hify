<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.activities.PhoneVerifyActivity">

    <LinearLayout
        android:layout_above="@+id/bottomLayout"
        android:id="@+id/layoutTop"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="@string/verify_your_mobile"
            android:gravity="center_horizontal"
            android:textColor="#FF000000"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="10dp"
            android:text="We have sent you a verification code to"
            android:gravity="center_horizontal"
            android:textColor="#FF000000"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/phone"
            android:padding="10dp"
            android:text="+917373072557"
            android:gravity="center_horizontal"
            android:textColor="#FF000000"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/progressBar"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/progressText"
                android:padding="10dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Waiting to automatically verify.."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/bottomLayout"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/codeText"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/input_backgtound_grey"
            android:ems="10"
            android:hint="Verification Code"
            android:layout_marginBottom="10dp"
            android:paddingBottom="15dp"
            android:paddingEnd="25dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingStart="25dp"
            android:paddingTop="15dp" />

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:padding="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginBottom="5dp"
                android:onClick="verifyCode"
                android:layout_marginEnd="5dp"
                android:textColor="#ffffff"
                android:fontFamily="@font/nunito_semibold"
                android:textAllCaps="false"
                android:background="@drawable/button_primary_backgtound"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Verify"
                android:layout_marginRight="5dp" />

            <Button
                android:layout_marginBottom="5dp"
                android:onClick="resendCode"
                android:text="Resend"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/nunito_semibold"
                android:textAllCaps="false"
                android:background="@drawable/input_backgtound_grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
