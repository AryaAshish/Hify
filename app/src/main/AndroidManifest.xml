<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.amsavarthan.hify">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:name=".ui.extras.Weather.WeatherExtra"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning,ManifestResource">
        <activity
            android:name=".ui.activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- baidu location -->
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="8Ag8g9warGQeUVFbqx4LRrXU" />

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/api_key" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccentt" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".ui.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/LoginAppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/LoginAppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.activities.SendActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <service
            android:name=".receivers.FCMService"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <service android:name=".receivers.InstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".ui.notification.NotificationActivity"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="com.amsavarthan.hify.TARGETNOTIFICATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.ProfileEdit"
            android:screenOrientation="portrait"
            android:theme="@style/LoginAppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.notification.NotificationReplyActivity"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.amsavarthan.hify.TARGETNOTIFICATIONREPLY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.ImagePreviewSave"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.ImagePreview"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.notification.NotificationImage"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.amsavarthan.hify.TARGETNOTIFICATION_IMAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.notification.NotificationImageReply"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.amsavarthan.hify.TARGETNOTIFICATIONREPLY_IMAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.ProfileView"
            android:screenOrientation="portrait"
            android:theme="@style/LoginAppTheme" />
        <activity
            android:name=".ui.activities.FriendsViewForMessage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.MessagesView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.AddFriends"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.FriendsView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.FriendRequestActivty"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="com.amsavarthan.hify.TARGET_FRIENDREQUEST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.extras.ExtrasActivity"
            android:screenOrientation="portrait" />

        <!-- -Weather -->
        <activity
            android:name=".ui.extras.Weather.ui.activity.MainActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/app_name_weather"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/HifyWeatherTheme">
            <intent-filter>
                <action android:name="com.amsavarthan.hify.ui.activities.Extras.Weather.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.extras.Weather.ui.activity.AlertActivity"
            android:label="@string/action_alert"
            android:theme="@style/HifyWeatherTheme" />
        <activity
            android:name=".ui.extras.Weather.ui.activity.ManageActivity"
            android:label="@string/action_manage"
            android:theme="@style/HifyWeatherTheme" />
        <activity
            android:name=".ui.extras.Weather.ui.activity.SearcActivity"
            android:label="@string/action_search"
            android:theme="@style/HifyWeatherTheme.Search" />
        <activity
            android:name=".ui.extras.Weather.ui.activity.SettingsActivity"
            android:label="@string/action_settings"
            android:screenOrientation="portrait"
            android:theme="@style/HifyWeatherTheme" />

        <!-- service -->
        <service android:name=".ui.extras.Weather.service.NormalUpdateService" />
        <service android:name=".ui.extras.Weather.service.TodayForecastUpdateService" />
        <service android:name=".ui.extras.Weather.service.TomorrowForecastUpdateService" />
        <service
            android:name=".ui.extras.Weather.service.JobNormalUpdateService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <service
            android:name=".ui.extras.Weather.service.JobTodayForecastUpdateService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <service
            android:name=".ui.extras.Weather.service.JobTomorrowForecastUpdateService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <service
            android:name=".ui.extras.Weather.service.PollingService"
            android:process=":polling" />
        <service
            android:name=".ui.extras.Weather.service.ProtectService"
            android:process=":protect" />
        <service
            android:name=".ui.extras.Weather.service.TileService"
            android:icon="@drawable/weather_sun_day_mini_light"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name=".ui.extras.Weather.service.CMWeatherProviderService"
            android:permission="cyanogenmod.permission.BIND_WEATHER_PROVIDER_SERVICE">
            <intent-filter>
                <action android:name="cyanogenmod.weatherservice.WeatherProviderService" />
            </intent-filter>

            <meta-data
                android:name="cyanogenmod.weatherservice"
                android:resource="@xml/cm_weather_provider_options" />
        </service>

        <!-- receiver -->
        <receiver android:name=".ui.extras.Weather.receiver.MainReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- reminder -->

        <activity
            android:name=".ui.extras.Planner.activities.MainActivity"
            android:label="@string/app_name_planner"
            android:theme="@style/StartTheme" />
        <activity
            android:name=".ui.extras.Planner.activities.CreateEditActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppThemeLight" />
        <activity
            android:name=".ui.extras.Planner.activities.ViewActivity"
            android:theme="@style/AppThemeLight" />
        <activity
            android:name=".ui.extras.Planner.activities.PreferenceActivity"
            android:label="@string/settings"
            android:theme="@style/ReminderAppTheme" />
        <activity
            android:name=".ui.extras.Planner.activities.SnoozeDialogActivity"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:theme="@style/AppThemeTransparent" />
        <activity
            android:name=".ui.extras.Planner.activities.shortcut.CreateEditShortcut"
            android:configChanges="orientation|screenSize"
            android:excludeFromRecents="true"
            android:theme="@style/AppThemeDialog">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.extras.Planner.activities.shortcut.ShortcutActivity">
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver android:name=".ui.extras.Planner.receivers.AlarmReceiver" />
        <receiver android:name=".ui.extras.Planner.receivers.SnoozeActionReceiver" />
        <receiver android:name=".ui.extras.Planner.receivers.SnoozeReceiver" />
        <receiver android:name=".ui.extras.Planner.receivers.DismissReceiver" />
        <receiver android:name=".ui.extras.Planner.receivers.NagReceiver" />
        <receiver
            android:name=".ui.extras.Planner.receivers.BootReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".ui.activities.About"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.AddUserDetail"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.extras.OurStreets.activity.MainActivity"
            android:label="@string/app_name_world"
            android:theme="@style/OurStreets">
            <intent-filter tools:ignore="GoogleAppIndexingWarning">
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.SearchUsersActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activities.UserDetail"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activities.PostText"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activities.CommentsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activities.PostImage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
    </application>

</manifest>